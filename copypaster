CREATE TABLE blogEntries (
 ID int NOT NULL AUTO_INCREMENT,
 Date text,
 Title text,
 Content text,
 PRIMARY KEY (ID)
);

CREATE TABLE loginDetails (
 ID int NOT NULL AUTO_INCREMENT,
 Email text,
 Password text,
 PRIMARY KEY (ID)
);

CREATE TABLE comments (
  comment_id INT AUTO_INCREMENT PRIMARY KEY,
  post_id INT,
  username VARCHAR(255) NOT NULL,
  `datetime` TEXT,
  comment TEXT NOT NULL
);
